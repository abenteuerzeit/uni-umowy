<script>
    const input = document.getElementById('input');
button.addEventListener('click', ()=>{
    const ajax = new XMLHttpRequest();
    const val = input.value;
    if (val === '') {
        document.getElementById('amount-in-words').innerHTML = 'Please enter a number';
        return;
    }
    ajax.open('GET', `/slownie?payout=${val}`);
    ajax.onload = function() {
        if (this.status === 200) {
            var data = JSON.parse(this.responseText);
            document.getElementById('amount-in-words').innerHTML = data.payout;
        }
        if (this.status === 400) {
            document.getElementById('amount-in-words').innerHTML = '400 - Bad Request';
        }
    }
    ajax.send();
});
</script>
